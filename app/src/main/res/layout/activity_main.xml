<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.user.helpharp.MainActivity">


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:background="?attr/colorPrimary"
        app:popupTheme="@style/AppTheme.PopupOverlay"
        tools:layout_conversion_absoluteX="0dp"
        tools:layout_conversion_absoluteY="0dp"
        tools:layout_conversion_absoluteWidth="384dp"
        tools:layout_conversion_absoluteHeight="56dp"

        app:layout_constraintRight_toRightOf="parent"

        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintTop_toTopOf="parent" />


    <LinearLayout
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:id="@+id/linearLayout"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        tools:layout_constraintRight_creator="1"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="6dp"
        app:layout_constraintRight_toRightOf="@+id/button_copy"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/linearLayout2"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="6dp">

        <Spinner
            android:id="@+id/spinner1"
            android:layout_width="395dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:entries="@array/harmonica_stroi"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="0dp" />

        <Spinner
            android:id="@+id/spinner2"
            android:layout_width="395dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:entries="@array/harmonica_stroi"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="0dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/linearLayout2"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintLeft_creator="1">

        <Button
            android:id="@+id/button_my_harm_key"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ваша " />

        <TextView
            android:id="@+id/view_n"
            android:layout_width="55dp"
            android:layout_height="45dp"
            android:text=""
            android:textSize="22dp" />

        <Button
            android:id="@+id/need_harm_key"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Желаемая " />

        <TextView
            android:id="@+id/view_z"
            android:layout_width="67dp"
            android:layout_height="42dp"
            android:text=""
            android:textSize="22dp" />


    </LinearLayout>

    <Button
        android:id="@+id/button_action_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="посчитать"
        app:layout_constraintTop_toBottomOf="@+id/edit_text_enter_tabl"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/edit_text_enter_tabl" />

    <TextView
        android:id="@+id/text_view_result"
        android:layout_width="0dp"
        android:layout_height="118dp"
        android:hint="Здесь должен быть результат"
        android:textSize="16sp"
        tools:text="Result"
        app:layout_constraintTop_toBottomOf="@+id/button_action_count"
        android:layout_marginTop="7dp"
        app:layout_constraintRight_toLeftOf="@+id/button_copy"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/button_action_count" />



    <EditText
        android:id="@+id/edit_text_enter_tabl"
        android:layout_width="297dp"
        android:layout_height="91dp"
        android:ems="10"
        android:hint="Табы: (через пробел 1 -1 -1' 1*) "
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="8dp"
        android:textCursorDrawable="@null"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2" />


    <Button
        android:id="@+id/octava_plus"
        style="@style/Widget.AppCompat.Button.Small"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:text="+"
        tools:layout_constraintTop_creator="1"
        app:layout_constraintTop_toBottomOf="@+id/edit_text_enter_tabl"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toRightOf="@+id/edit_text_enter_tabl" />

    <Button
        android:id="@+id/octava_minus"
        style="@style/Widget.AppCompat.Button.Small"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:text="-"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1"
        android:layout_marginEnd="15dp"
        app:layout_constraintRight_toRightOf="@+id/edit_text_enter_tabl"
        app:layout_constraintTop_toBottomOf="@+id/edit_text_enter_tabl"
        android:layout_marginRight="15dp" />

    <Button
        android:id="@+id/reset_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="reset"

        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintTop_creator="1"
        app:layout_constraintTop_toTopOf="@+id/linearLayout2" />

    <Button
        android:id="@+id/button_copy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="copy"
        app:layout_constraintLeft_toRightOf="@+id/edit_text_enter_tabl"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2" />


    <Button
        android:id="@+id/button_copy2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="COPY"
        app:layout_constraintLeft_toRightOf="@+id/button_action_count"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toBottomOf="@+id/edit_text_enter_tabl"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.005"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />




    <android.inputmethodservice.KeyboardView
        android:id="@+id/keyboardview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        app:layout_constraintBottom_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintLeft_creator="1" />

    <Button
        android:id="@+id/button"
        style="@style/Widget.AppCompat.Button.Small"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginStart="6dp"
        android:text="Button"
        android:textSize="8sp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginEnd="8dp"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintTop_toTopOf="@+id/text_view_result"
        app:layout_constraintLeft_toRightOf="@+id/text_view_result"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="8dp" />


</android.support.constraint.ConstraintLayout>
