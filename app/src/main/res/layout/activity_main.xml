<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.user.helpharp.MainActivity">


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1">

        <Spinner
            android:id="@+id/spinner1"
            android:layout_width="395dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:entries="@array/harmonica_stroi"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="0dp" />

        <Spinner
            android:id="@+id/spinner2"
            android:layout_width="395dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:entries="@array/harmonica_stroi"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="0dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1">

        <Button
            android:id="@+id/button_my_harm_key"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ваша " />

        <TextView
            android:id="@+id/view_n"
            android:layout_width="55dp"
            android:layout_height="45dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:text=""
            android:textSize="22dp" />

        <Button
            android:id="@+id/need_harm_key"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Желаемая " />

        <TextView
            android:id="@+id/view_z"
            android:layout_width="67dp"
            android:layout_height="42dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:text=""
            android:textSize="22dp" />


    </LinearLayout>

    <Button
        android:id="@+id/button_action_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="посчитать"
        app:layout_constraintLeft_toLeftOf="@+id/edit_text_enter_tabl"
        app:layout_constraintTop_toBottomOf="@+id/edit_text_enter_tabl"
        tools:layout_constraintLeft_creator="1" />


    <TextView
        android:id="@+id/text_view_result"
        android:layout_width="368dp"
        android:layout_height="180dp"
        android:layout_marginTop="7dp"
        android:hint="Здесь должен быть результат"
        android:scrollbars="vertical"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="@+id/button_action_count"
        app:layout_constraintTop_toBottomOf="@+id/button_action_count"
        tools:layout_constraintLeft_creator="1"
        tools:text="Result" />


    <EditText
        android:id="@+id/edit_text_enter_tabl"
        android:layout_width="297dp"
        android:layout_height="91dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="Табы: (через пробел 1 -1 -1' 1*) "
        android:textCursorDrawable="@null"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2" />


    <Button
        android:id="@+id/octava_plus"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:text="+"
        app:layout_constraintLeft_toRightOf="@+id/edit_text_enter_tabl"
        app:layout_constraintTop_toBottomOf="@+id/edit_text_enter_tabl"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1" />

    <Button
        android:id="@+id/octava_minus"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginRight="15dp"
        android:text="-"
        app:layout_constraintRight_toRightOf="@+id/edit_text_enter_tabl"
        app:layout_constraintTop_toBottomOf="@+id/edit_text_enter_tabl"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <Button
        android:id="@+id/reset_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="7dp"
        android:layout_marginTop="15dp"
        android:text="res"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/text_view_result"
        tools:layout_constraintTop_creator="1" />

    <!--<Button-->
    <!--android:id="@+id/button_copy"-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:text="copy"-->
    <!--android:layout_marginStart="8dp"-->
    <!--tools:layout_constraintTop_creator="1"-->
    <!--android:layout_marginTop="17dp"-->
    <!--tools:layout_constraintLeft_creator="1"-->
    <!--app:layout_constraintTop_toTopOf="@+id/edit_text_enter_tabl"-->
    <!--app:layout_constraintLeft_toRightOf="@+id/edit_text_enter_tabl"-->
    <!--android:layout_marginLeft="2dp" />-->


    <Button
        android:id="@+id/button_copy2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:text="COPY"
        app:layout_constraintHorizontal_bias="0.005"
        app:layout_constraintLeft_toRightOf="@+id/button_action_count"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_text_enter_tabl" />


    <android.inputmethodservice.KeyboardView
        android:id="@+id/keyboardview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        app:layout_constraintBottom_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1" />

    <Button
        android:id="@+id/button"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginRight="22dp"
        android:text="Scales"
        android:textSize="8sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/edit_text_enter_tabl"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintBaseline_creator="1"
        tools:layout_constraintRight_creator="1" />


</android.support.constraint.ConstraintLayout>
