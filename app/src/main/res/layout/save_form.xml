<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <Button
        android:id="@+id/button12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/save_form_bt_OK"
        android:layout_alignBottom="@+id/save_form_bt_OK"
        android:layout_alignEnd="@+id/save_form_et_name"
        android:text="Button" />

    <Button
        android:id="@+id/save_form_bt_OK"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/save_form_et_name"
        android:layout_alignTop="@+id/save_form_et_name"
        android:layout_marginTop="65dp"
        android:text="ОК" />

    <EditText
        android:id="@+id/save_form_et_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="19dp"
        android:layout_marginTop="9dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Name" />
</RelativeLayout>
